{
  "name": "younggeun0-dev-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:website": "turbo run dev --filter=@younggeun0/website",
    "dev:domado": "turbo run dev --filter=@younggeun0/domado",
    "dev:pyh": "turbo run dev --filter=@younggeun0/pyh",
    "build": "turbo run build",
    "build:website": "turbo run build --filter=@younggeun0/website",
    "build:domado": "turbo run build --filter=@younggeun0/domado",
    "build:pyh": "turbo run build --filter=@younggeun0/pyh",
    "start": "turbo run start",
    "start:website": "turbo run start --filter=@younggeun0/website",
    "lint": "turbo run lint",
    "lint:website": "turbo run lint --filter=@younggeun0/website",
    "lint:domado": "turbo run lint --filter=@younggeun0/domado",
    "lint:pyh": "turbo run lint --filter=@younggeun0/pyh",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "prettier": "^3.2.5",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": "20.x"
  }
}

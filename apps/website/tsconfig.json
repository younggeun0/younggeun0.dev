{
  "extends": ["../../packages/config/typescript.json", "./tsconfig.paths.json"],
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/assets/*": [
        "./public/*"
      ],
      "@younggeun0/ui": [
        "../../packages/ui"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "global.d.ts",
    "svgr.d.ts",
    "app",
    "pages",
    "components",
    "lib",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
